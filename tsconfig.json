{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,

    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"]
}
